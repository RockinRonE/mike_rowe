<h2>All Teachers</h2>

<table class="table table-striped">
	<tr>
		<th>Pic</th>
		<th>Name</th>
		<th>Email</th>
	</tr>
	<% @teachers.each do |teacher| %>
	<tr>
		<td><%= link_to image_tag("http://placehold.it/50x50", alt: "Teacher Pic"), '#' %></td>
		<td><%= teacher.name %></td>
		<td><%= teacher.email %></td>
	</tr>
		<% end %>
</table>






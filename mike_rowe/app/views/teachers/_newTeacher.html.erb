<%= form_for :teacher, url: '/teachers' do |f| %>
<div class="field">
  Name: <%= f.text_field :name %>
  </div>
<div class="field">
  Email: <%= f.text_field :email %>
  </div>
  <div class="field">
  Password: <%= f.password_field :password %>
  </div>
  <div class="field">
  Confirm Pass: <%= f.password_field :password_confirmation %>
  </div>
  <div class="field">
  Admin? <%= f.check_box :admin %>
  </div>
  <br>
   <div class="actions">
  <%= f.submit "Submit" %>
</div>
<% end %>
<h2>Student Page</h2>
<div class="panel panel-default">
<% if @student != nil %>
  <div class="panel-body">
    <div class="panel-heading">
      <h3 class="panel-title"><%= @student.name %></h3>
    </div>

    <div class="panel-body">
      <div class="row">
        <div class="col-md-3 col-lg-3 " align="center"> <a href="#"><img alt="Teacher Pic" src="http://placehold.it/250x250"></a> </div>
  
        <div class=" col-md-9 col-lg-9 "> 
          <table class="table table-user-information">
            <tbody>
              <tr>
                <td>Gender:</td>
                <td><%= @student.gender %></td>
              </tr>
              <tr>
                <td>Age:</td>
                <td><%= @student.age %></td>
              </tr>
              <tr>
                <td>Grade:</td>
                <td><%= @student.grade %></td>
              </tr>
           
              <tr>
                </tr><tr>
                  <td>Disciplinary actions:</td>
                  <td><%= @student.detentions %></td>
                </tr>
                <tr>
                  <td>Grades</td>
                  <td>Math: <%= @student.grades["math"] %></td>
                  <td>History: <%= @student.grades["history"] %></td>
                  <td>Science: <%= @student.grades["science"] %></td>
                </tr>
              
            </tbody>
          </table>
          <% end %>
        </div>
      </div>      
    </div>
  </div>
</div>